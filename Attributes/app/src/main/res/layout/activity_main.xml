<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:padding="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/button_black_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Черный текст" />

            <Button
                android:id="@+id/button_size8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Размер-8SP" />

            <Button
                android:id="@+id/button_white_background"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Белый фон" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/button_red_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Красный текст" />

            <Button
                android:id="@+id/button_size24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Размер-24SP" />

            <Button
                android:id="@+id/button_yellow_background"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Желтый фон" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>